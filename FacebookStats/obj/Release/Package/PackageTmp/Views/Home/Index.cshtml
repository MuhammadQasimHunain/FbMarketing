@model IEnumerable<FacebookStats.Models.PostWallInstance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Campaigns</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeaderMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebSiteDisplayURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebSiteURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxBudget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Locations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnd)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeaderMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebSiteDisplayURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebSiteURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxBudget)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locations)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEnd)
        </td>
        <td>
            @Html.ActionLink("Preview", "Preview", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
